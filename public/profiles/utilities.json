  "patterns": [
    {
      "id": "emergency",
      "name": "Emergency Line",
      "detect": [
        "report an outage",
        "press 1 for emergency",
        "power outage",
        "gas leak"
      ],
      "action": "press",
      "value": "1",
      "priority": "high",
      "description": "Press 1 for emergencies"
    },
    {
      "id": "billing",
      "name": "Billing Department",
      "detect": [
        "billing press",
        "pay your bill",
        "press 2 for billing",
        "account balance"
      ],
      "action": "press",
      "value": "2",
      "description": "Press 2 for billing"
    },
    {
      "id": "new-service",
      "name": "New Service",
      "detect": [
        "new service",
        "start service",
        "press 3 for new"
      ],
      "action": "press",
      "value": "3",
      "description": "Press 3 for new service"
    },
    {
      "id": "account-number",
      "name": "Account Number Request",
      "detect": [
        "enter your account number",
        "account number followed by",
        "please enter your account"
      ],
      "action": "wait",
      "value": 2,
      "then": {
        "action": "press",
        "value": "0"
      },
      "description": "Wait then press 0 to skip account entry"
    },
    {
      "id": "high-volume",
      "name": "High Call Volume",
      "detect": [
        "unusually high call volume",
        "all representatives are busy",
        "next available agent"
      ],
      "action": "wait",
      "value": 60,
      "description": "Wait during high call volume"
    },
    {
      "id": "human-detected",
      "name": "Customer Service Rep",
      "detect": [
        "how may i assist",
        "thank you for calling",
        "my name is",
        "customer service",
        "this is"
      ],
      "action": "connect",
      "record": true,
      "alert": true,
      "description": "Connect when representative answers"
    }
  ],
  "redialSettings": {
    "maxAttempts": 10,
    "delaySeconds": 180,
    "exponentialBackoff": false
  },
  "recordingSettings": {
    "enabled": true,
    "onlyHuman": true,
    "minDuration": 3
  }
